<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:showIn="@layout/activity_place_form">

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="@dimen/space_between_content"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <me.piruin.spinney.Spinney
            android:id="@+id/place_type_selector"
            android:hint="@string/place_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/place_subtype_layout"
        android:layout_marginTop="@dimen/space_between_content"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <me.piruin.spinney.Spinney
            android:id="@+id/place_subtype_selector"
            android:hint="@string/place_subtype_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>
</LinearLayout>
