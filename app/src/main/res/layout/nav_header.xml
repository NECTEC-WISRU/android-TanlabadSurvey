<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="192dp"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/papercolormaterialdesign_texture_pink"
        android:contentDescription="@null"
        android:scaleType="center"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_above="@+id/username"
        android:layout_gravity="bottom"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="@dimen/wide_space_between_content"
        android:background="@color/transparent"
        android:contentDescription="@null"
        android:src="@drawable/person_default_background"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/user_fullname"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/wide_space_between_content"
        android:background="@color/transparent"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="@dimen/text_caption"
        tools:text="trial-user"/>

    <TextView
        android:id="@+id/user_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/organization"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/wide_space_between_content"
        android:background="@color/transparent"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="@dimen/text_subhead"
        tools:text="ทดสอบ ทันระบาด"/>

    <TextView
        android:id="@+id/organization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/wide_space_between_content"
        android:layout_marginLeft="@dimen/wide_space_between_content"
        android:background="@color/transparent"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="@dimen/text_caption"
        tools:text="สคร. 1"/>

</RelativeLayout>
