<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                tools:ignore="Overdraw"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:id="@+id/bg_blue"
            android:src="@drawable/bg_blue_login_page"
            android:contentDescription="@null"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/bg_blue"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="@string/version"
            android:textColor="#ffffff"/>

    <ImageView
            android:contentDescription="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/logo_tabrabad"
            android:src="@drawable/logo_tanrabad"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/logo_tabrabad">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="@dimen/text_headline"
                android:textColor="#ffffff"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/survey"
                android:textSize="@dimen/text_title"
                android:textColor="#ffffff"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:layout_marginTop="220dp"
                  android:layout_centerHorizontal="true"
                  android:layout_below="@+id/logo_tabrabad">

        <Button
                android:id="@+id/authentication_button"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#ffffff"
                android:background="@drawable/rounded_button"
                android:textSize="@dimen/text_title"
                android:text="@string/authentication"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/trial"
                android:textSize="@dimen/text_body"
                android:textColor="#848484"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/screen_horizontal_margin">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/powered_by"/>

        <ImageView
                android:layout_marginBottom="@dimen/space_between_content"
                android:layout_width="125dp"
                android:layout_height="39dp"
                android:src="@drawable/logo_nectec"
                android:contentDescription="@null"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:textSize="15sp"
                android:text="@string/copyright"
                android:layout_marginBottom="@dimen/screen_vertical_margin"/>

    </LinearLayout>

</RelativeLayout>
