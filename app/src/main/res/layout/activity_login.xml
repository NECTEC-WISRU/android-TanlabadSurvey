<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_gravity="center_horizontal"
             android:background="@color/white">

    <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="wrap_content"
            android:id="@+id/loginBgBlue"
            android:src="@drawable/bg_blue"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logoTabrabad"
            android:src="@drawable/logo_tanrabad"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="version 1.0"
            android:id="@+id/textVersion"
            android:layout_gravity="right|top"
            android:textColor="#ffffff" android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="ทันระบาดสำรวจ"
            android:textSize="@dimen/text_headline"
            android:textColor="#ffffff"
            android:layout_marginTop="320dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="ลืมรหัสผ่าน?"
            android:textSize="@dimen/text_subhead"
            android:textColor="#ffffff"
            android:layout_marginTop="400dp"
            android:textStyle="normal"/>

    <EditText
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:padding="15dip"
            android:layout_marginTop="500dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_edit_text"
            android:hint="ชื่อผู้ใช้งาน"/>

    <EditText
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:padding="15dip"
            android:layout_marginTop="570dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_edit_text"
            android:hint="รหัสผ่าน"/>

    <Button
            android:id="@+id/button1"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="650dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_button"
            android:textSize="30dp"
            android:text="เข้าสู่ระบบ"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingTop="20dp"
            android:layout_marginTop="700dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ทดลองใช้งาน"
                android:textSize="@dimen/text_body"
                android:textColor="#848484"
                android:textStyle="normal"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="|"
                android:textSize="@dimen/text_body"
                android:textColor="#848484"
                android:textStyle="normal"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="สมัครสมาชิก"
                android:textSize="@dimen/text_body"
                android:textColor="#848484"
                android:textStyle="normal"/>

    </LinearLayout>


</FrameLayout>