<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@null"
        android:src="@mipmap/ic_cloud"
        android:id="@+id/cloud_icon"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/text_padding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/survey_result"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textIsSelectable="false"
        android:padding="@dimen/text_padding"
        android:layout_toLeftOf="@id/cloud_icon"
        android:id="@+id/survey_result_title" android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/loading"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/survey_result_title"
        android:layout_marginBottom="48dp"/>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/screen_horizontal_margin"
        android:id="@+id/result_layout"
        android:layout_below="@id/survey_result_title">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/place_info_layout"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/place_icon" android:layout_alignStart="@+id/place_icon"
            android:layout_marginBottom="@dimen/screen_vertical_margin">
            <ImageView
                style="@style/ListIcon"
                tools:src="@mipmap/ic_place_hospital"
                android:id="@+id/place_icon"
                android:contentDescription="@string/place_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/space_between_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="ชุมชนที่พักอาศัย"
                    android:textIsSelectable="false"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/place_type"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="หมู่บ้านทดสอบ"
                    android:textIsSelectable="false"
                    android:textAppearance="?android:attr/textAppearance"
                    android:id="@+id/place_name"
                    android:layout_below="@+id/place_type"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="ต.บางรักพัฒนา อ.บางบัวทอง จ.นนทบุรี"
                    android:textIsSelectable="false"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/address" android:layout_below="@+id/place_name"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/place_info_layout"
            android:id="@+id/index_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/screen_vertical_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="HI 10%"
                android:id="@+id/house_index"
                android:textIsSelectable="false"
                android:textAppearance="?android:attr/textAppearance"
                android:layout_marginRight="@dimen/wide_space_between_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="CI 5%"
                android:id="@+id/container_index"
                android:textIsSelectable="false"
                android:textAppearance="?android:attr/textAppearance"
                android:layout_marginRight="@dimen/wide_space_between_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="BI 8"
                android:id="@+id/breteau_index"
                android:textIsSelectable="false"
                android:textAppearance="?android:attr/textAppearance"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="false"
            android:textAppearance="?android:attr/textAppearance"
            tools:text="บ้านที่สำรวจทั้งหมด 100 หลัง"
            android:id="@+id/survey_count" android:layout_below="@id/index_layout"/>
        <TextView
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearance"
            android:layout_height="wrap_content"
            tools:text="บ้านที่พบลูกน้ำ 9 หลัง"
            android:textIsSelectable="false"
            android:id="@+id/survey_found_count" android:layout_below="@+id/survey_count"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearance"
            android:textIsSelectable="false"
            tools:text="บ้านที่ไม่มีภาชนะขังน้ำ 10 หลัง"
            android:id="@+id/no_container_houses" android:layout_below="@+id/survey_found_count"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  tools:text="ภาชนะสำรวจทั้งหมด 1000 พบ 50"
                  android:id="@+id/container_count"
                  android:textAppearance="?android:attr/textAppearance"
                  android:layout_below="@+id/no_container_houses"
                  android:textIsSelectable="false"
                  android:layout_marginBottom="@dimen/screen_vertical_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="false"
            android:text="@string/key_container_title"
            android:textAppearance="?android:attr/textAppearanceInverse"
            android:textStyle="bold"
            android:id="@+id/key_container_title" android:layout_below="@+id/container_count"
            android:layout_alignLeft="@+id/container_count" android:layout_alignStart="@+id/container_count"
            android:layout_marginBottom="@dimen/space_between_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/indoor"
            android:id="@+id/indoor_title"
            android:textIsSelectable="false"
            android:textAppearance="?android:attr/textAppearance"
            app:layout_widthPercent="50%"
            android:gravity="center"
            android:layout_below="@id/key_container_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/outdoor"
            android:textIsSelectable="false"
            android:textAppearance="?android:attr/textAppearance"
            android:layout_toRightOf="@id/indoor_title"
            app:layout_widthPercent="50%"
            android:gravity="center"
            android:layout_alignBaseline="@id/indoor_title"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/indoor_title"
            android:id="@+id/indoor_container"
            app:layout_widthPercent="50%" android:layout_marginBottom="@dimen/screen_vertical_margin">
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="50%"
            android:id="@+id/outdoor_container"
            android:layout_alignTop="@id/indoor_container"
            android:layout_toRightOf="@id/indoor_container">
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/got_it"
        android:layout_below="@id/result_layout"
        android:id="@+id/got_it"/>
</RelativeLayout>