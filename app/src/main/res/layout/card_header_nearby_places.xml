<com.bartoszlipinski.recyclerviewheader.RecyclerViewHeader
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_header"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
            style="@style/TanrabadTextAppearance.Title"
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nearby_places"/>

    <TextView
        style="@style/TanrabadTextAppearance.Caption"
        android:layout_below="@id/card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/nearby_places_caption"/>

    <TextView
            android:id="@+id/place_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/card_title"
            android:textIsSelectable="false"
            tools:text="200 รายการ"/>

</com.bartoszlipinski.recyclerviewheader.RecyclerViewHeader>
