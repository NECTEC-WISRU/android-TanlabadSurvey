<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/container_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/container_bg"
        android:contentDescription="@string/survey_container_description" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/between_view"
        android:layout_marginStart="@dimen/between_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/container_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/between_view"
            android:textColor="@color/black"
            android:textIsSelectable="true"
            android:textSize="@dimen/header_text_size"
            tools:text="ประเภทภาชนะ" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:textColor="@color/black"
                android:textSize="@dimen/body_text_size" />

            <EditText
                android:id="@+id/total_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/between_view"
                android:layout_marginStart="@dimen/between_view"
                android:background="@drawable/quantity_field_shape"
                android:ems="2"
                android:gravity="center"
                android:inputType="number"
                android:padding="@dimen/between_view"
                android:textColor="@color/white"
                android:textSize="@dimen/body_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/between_view"
                android:layout_marginStart="@dimen/between_view"
                android:text="@string/found"
                android:textColor="@color/black"
                android:textSize="@dimen/body_text_size" />

            <EditText
                android:id="@+id/found_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/between_view"
                android:layout_marginStart="@dimen/between_view"
                android:background="@drawable/quantity_field_shape"
                android:ems="2"
                android:gravity="center"
                android:inputType="number"
                android:padding="@dimen/between_view"
                android:textColor="@color/white"
                android:textSize="@dimen/body_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>