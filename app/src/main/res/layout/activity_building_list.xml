<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height_with_padding"
        android:background="@color/header_building">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/place_bg" />

        <TextView
            android:id="@+id/place_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:gravity="end"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="@dimen/text_headline"
            tools:text="หมู่ 1 บ้านบางไผ่" />
    </FrameLayout>


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="true">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/header_height_padding" />

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
            android:layout_width="568dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="@dimen/indoor_outdoor_padding_bottom"
                        android:paddingTop="@dimen/indoor_outdoor_padding_top"
                        android:text="@string/survey_building"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_body" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/building_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/between_view"
                            android:layout_marginStart="@dimen/between_view"
                            android:contentDescription="@string/number_place_list_in_database"
                            android:paddingBottom="@dimen/indoor_outdoor_padding_bottom"
                            android:paddingTop="@dimen/indoor_outdoor_padding_top"
                            android:textColor="@color/gray"
                            android:textIsSelectable="false"
                            android:textSize="@dimen/text_body"
                            tools:text="200" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/between_view"
                            android:layout_marginStart="@dimen/between_view"
                            android:paddingBottom="@dimen/indoor_outdoor_padding_bottom"
                            android:paddingTop="@dimen/indoor_outdoor_padding_top"
                            android:text="@string/list_unit"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_body" />
                    </LinearLayout>

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/building_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </android.support.design.widget.CoordinatorLayout>
</merge>