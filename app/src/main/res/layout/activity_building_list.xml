<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height_with_padding"
        android:background="@color/header_building">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/place_bg" />

        <TextView
            android:id="@+id/place_name"
            style="@style/TextViewTanrabad.Header.Right"
            android:textIsSelectable="false"
            tools:text="หมู่ 1 บ้านบางไผ่" />
    </FrameLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/component_header_collapsing_transparent"/>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/list_card_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/building_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.bartoszlipinski.recyclerviewheader.RecyclerViewHeader
                android:id="@+id/card_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/actionbar_size"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_show_title_building_list"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="@dimen/indoor_outdoor_padding_bottom"
                        android:paddingTop="@dimen/indoor_outdoor_padding_top"
                        android:text="@string/survey_building"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_body" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/building_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/between_view"
                            android:layout_marginStart="@dimen/between_view"
                            android:contentDescription="@string/number_building_list"
                            android:paddingBottom="@dimen/indoor_outdoor_padding_bottom"
                            android:paddingTop="@dimen/indoor_outdoor_padding_top"
                            android:textColor="@color/gray"
                            android:textIsSelectable="false"
                            android:textSize="@dimen/text_body"
                            tools:text="200" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/between_view"
                            android:layout_marginStart="@dimen/between_view"
                            android:paddingBottom="@dimen/indoor_outdoor_padding_bottom"
                            android:paddingTop="@dimen/indoor_outdoor_padding_top"
                            android:text="@string/list_unit"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_body" />
                    </LinearLayout>

                </LinearLayout>
            </com.bartoszlipinski.recyclerviewheader.RecyclerViewHeader>
        </android.support.v7.widget.CardView>

    </android.support.design.widget.CoordinatorLayout>
</merge>