<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/survey_header" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:paddingRight="@dimen/padding_right"
            android:paddingTop="@dimen/padding_top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/building_name"
                android:textIsSelectable="true"
                android:textSize="@dimen/body_text_size_big"
                android:gravity="right"
                tools:text="บ้านเลขที่ 123/321"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/between_text_margin_bottom"
                android:layout_marginTop="@dimen/between_text_margin_top"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/place_name"
                android:textIsSelectable="false"
                android:textSize="@dimen/body_text_size_small"
                tools:text="หมู่ที่ 1 บ้านบางไผ่"
                android:textColor="@color/white"
                android:gravity="right"
                android:layout_marginTop="@dimen/between_text_margin_top"
                android:layout_marginBottom="@dimen/between_text_margin_bottom"
                android:layout_gravity="right" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/between_text_margin_bottom"
                android:layout_marginTop="@dimen/between_text_margin_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_of_resident"
                    android:textColor="@color/white"
                    android:textSize="@dimen/body_text_size"
                    android:layout_marginRight="@dimen/between_view_margin_left" />

                <EditText
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/resident_count"
                    android:background="@drawable/quantity_field_shape"
                    android:textColor="@color/white"
                    android:textSize="@dimen/body_text_size"
                    android:inputType="number"
                    android:autoText="false"
                    android:gravity="center"
                    android:textIsSelectable="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/person"
                    android:textColor="@color/white"
                    android:textSize="@dimen/body_text_size"
                    android:layout_marginLeft="@dimen/between_view_margin_left" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/indoor_area"
            android:background="@color/light_gray">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/indoor"
                android:gravity="center"
                android:textSize="@dimen/header_text_size"
                android:background="@color/shock_pink"
                android:textColor="@color/white"
                android:paddingTop="@dimen/indoor_outdoor_padding_top"
                android:paddingBottom="@dimen/indoor_outdoor_padding_bottom" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/outdoor_area">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/outdoor"
                android:gravity="center"
                android:textSize="@dimen/header_text_size"
                android:background="@color/pink"
                android:textColor="@color/white"
                android:paddingTop="@dimen/indoor_outdoor_padding_top"
                android:paddingBottom="@dimen/indoor_outdoor_padding_bottom" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>