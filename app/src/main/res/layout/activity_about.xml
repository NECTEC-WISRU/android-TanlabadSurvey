<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/screen_vertical_margin"
            android:paddingLeft="@dimen/screen_vertical_margin"
            android:text="@string/app_name"
            android:textSize="@dimen/text_title"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/screen_vertical_margin"
            android:text="@string/app_version"
            android:textSize="@dimen/text_caption"/>

    <TextView
            android:id="@+id/about_contributor"
            style="@style/AboutItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_contributor"/>

    <TextView
            android:id="@+id/about_license"
            style="@style/AboutItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_license"/>

    <TextView
            android:id="@+id/about_eula"
            style="@style/AboutItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_eula"/>

</LinearLayout>