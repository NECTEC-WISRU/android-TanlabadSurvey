<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:onClick="onRootViewClick">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onRootViewClick">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_size"
            android:background="@color/shock_pink"
            android:fitsSystemWindows="true"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/AppTheme.AppBarOverlay"
            app:theme="@style/AppTheme.AppBarOverlay"/>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/screen_horizontal_margin"
        android:onClick="onRootViewClick"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <TextView
                    style="@style/TextViewTanrabad.Label"
                    android:text="@string/place_type"
                    android:textIsSelectable="false"/>

            <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/place_type_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_between_content"
                    android:inputType="text"
                    tools:listitem="@layout/list_item_spinner"/>

            <LinearLayout
                    android:id="@+id/place_subtype_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_between_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/place_subtype_label"
                        style="@style/TextViewTanrabad.Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textIsSelectable="false"
                        tools:text="ประเภทศาสนสถาน"/>

                <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/place_subtype_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_between_content"
                        android:inputType="text"
                        tools:listitem="@layout/list_item_spinner"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/TextViewTanrabad.Label"
            android:text="@string/place_name"/>

        <EditText
            android:id="@+id/place_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/touch_to_type_place_name"
            android:inputType="text"/>

        <TextView
            style="@style/TextViewTanrabad.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:textIsSelectable="false"/>

        <th.or.nectec.android.widget.thai.address.AppCompatAddressPicker
            android:id="@+id/address_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/touch_to_define_address"/>

        <include layout="@layout/location_form"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
