<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/survey_building_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/building_icon"
        android:src="@drawable/container_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/between_view"
        android:layout_marginStart="@dimen/between_view"
        android:orientation="vertical">

        <TextView
                android:id="@+id/survey_building_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="false"
                android:textSize="@dimen/text_title"
                tools:text="บ้านเลขที่ 1" />
    </LinearLayout>

    <th.or.nectec.tanrabad.survey.presenter.view.RelativeTimeAgoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            tools:text="2 นาที"
            android:id="@+id/time_ago"/>
</LinearLayout>