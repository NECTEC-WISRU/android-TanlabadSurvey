<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <ImageView
            android:contentDescription="@string/building_image_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/padding_right"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:paddingStart="@dimen/padding_right"
            android:paddingTop="@dimen/padding_top">

            <TextView
                android:id="@+id/place_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:textColor="@color/white"
                android:textSize="@dimen/header_text_size"
                tools:text="หมู่ 1 บ้านบางไผ่" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/indoor_outdoor_padding_bottom"
            android:paddingTop="@dimen/indoor_outdoor_padding_top"
            android:text="@string/survey_building_history"
            android:textColor="@color/black"
            android:textSize="@dimen/header_text_size"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/survey_building_history_list" />

</LinearLayout>