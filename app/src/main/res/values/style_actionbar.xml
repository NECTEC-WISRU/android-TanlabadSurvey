<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/shock_pink</item>
        <item name="android:height">@dimen/actionbar_size</item>
        <item name="titleTextStyle">@style/ActionBar.TitleTextAppearance</item>
    </style>

    <style name="ActionBar.TitleTextAppearance" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_body_large</item>
    </style>

    <style name="Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="background">@color/shock_pink</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleTextAppearance</item>
    </style>

    <style name="Toolbar.TitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_body_large</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabBackground" tools:ignore="PrivateResource">?attr/selectableItemBackground </item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>