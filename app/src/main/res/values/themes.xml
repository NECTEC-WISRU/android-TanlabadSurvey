<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Define Actionbar Style-->
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="actionModeCloseDrawable">@mipmap/ic_clear_white_24dp</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="actionMenuTextAppearance">@style/ActionBarTitleTextAppearance</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Defind Widget Theme -->
        <item name="android:textViewStyle">@style/TextViewTanrabad</item>
        <item name="buttonStyle">@style/ButtonTanrabad</item>
        <item name="android:buttonStyle">@style/ButtonTanrabad</item>

        <!-- Define AlertDialog theme-->
        <item name="android:dialogTheme">@style/Dialog</item>
        <item name="alertDialogTheme">@style/Dialog</item>

        <!-- Define text appearance -->
        <item name="android:textAppearance">@style/TanrabadTextAppearance.Body</item>
        <item name="android:textAppearanceSmall">@style/TanrabadTextAppearance.Caption</item>
        <item name="android:textAppearanceSmallInverse">
            @style/TanrabadTextAppearance.Caption.Inverse
        </item>
        <item name="android:textAppearanceMedium">@style/TanrabadTextAppearance.Body</item>
        <item name="android:textAppearanceMediumInverse">
            @style/TanrabadTextAppearance.Body.Inverse
        </item>
        <item name="android:textAppearanceLarge">@style/TanrabadTextAppearance.Title</item>
        <item name="android:textAppearanceLargeInverse">@style/TanrabadTextAppearance.Title</item>
        <item name="android:textAppearanceListItem">@style/TanrabadTextAppearance.Body</item>
        <item name="android:textAppearanceListItemSmall">@style/TanrabadTextAppearance.Caption</item>

        <!-- Define Color Theme-->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/lighter_gray</item>

        <!--Preference Theme-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.Dark">
        <item name="android:windowBackground">@color/darker_gray</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white_transparent_70</item>
        <item name="android:textColorTertiary">@color/white_transparent_50</item>
    </style>

    <style name="AppTheme.Dark.Blue">
        <item name="colorPrimary">@color/water_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
    </style>

    <style name="AppTheme.Blue">
        <item name="colorPrimary">@color/water_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
    </style>

    <style name="AppTheme.Purple">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
    </style>

    <style name="AppTheme.SplashScreen">
        <item name="android:windowBackground">@color/razzmatazz</item>
    </style>

    <style name="AppTheme.Blue.Water">
        <item name="android:windowBackground">@drawable/bg_water</item>
    </style>


    <style name="AppTheme.Alternate">
        <item name="actionBarStyle">@style/ActionBar.Alternate</item>
        <item name="colorPrimary">@color/darker_gray</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

</resources>
