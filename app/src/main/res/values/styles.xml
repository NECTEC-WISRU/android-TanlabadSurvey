<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewTanrabad">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewTanrabad.Label">
        <item name="android:layout_marginBottom">@dimen/between_view</item>
    </style>

    <style name="TextViewTanrabad.Header">
        <item name="android:layout_marginBottom">@dimen/between_view</item>
        <item name="android:textSize">@dimen/text_headline</item>
    </style>

    <style name="TextViewTanrabad.Header.Right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_headline</item>
    </style>

</resources>