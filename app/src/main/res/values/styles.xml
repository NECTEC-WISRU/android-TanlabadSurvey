<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextViewTanrabad">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewTanrabad.Label">
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:layout_marginTop">@dimen/space_between_content</item>
    </style>

    <style name="TextViewTanrabad.Header">
        <item name="android:layout_marginBottom">@dimen/space_between_content</item>
        <item name="android:textSize">@dimen/text_headline</item>
    </style>

    <style name="TextViewTanrabad.Header.Right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd" tools:targetApi="jelly_bean_mr1">true</item>
        <item name="android:layout_marginRight">@dimen/screen_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/screen_vertical_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_headline</item>
    </style>

    <style name="TextViewTanrabad.Header.Left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd" tools:targetApi="jelly_bean_mr1">true</item>
        <item name="android:layout_marginRight">@dimen/screen_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/screen_vertical_margin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_headline</item>
    </style>

    <style name="ButtonTanrabad" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="ListItem">
        <item name="android:background">@drawable/bg_list_item</item>
        <item name="android:paddingTop">@dimen/list_padding_top</item>
        <item name="android:paddingBottom">@dimen/list_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/list_padding_left</item>
        <item name="android:paddingRight">@dimen/list_padding_right</item>
        <item name="android:minHeight">@dimen/list_item_min_height</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:background">@drawable/bg_spinner_item</item>
        <item name="android:paddingTop">@dimen/list_padding_top</item>
        <item name="android:paddingLeft">@dimen/list_padding_left</item>
        <item name="android:paddingBottom">@dimen/list_padding_bottom</item>
        <item name="android:paddingRight">@dimen/list_padding_right</item>
        <item name="android:minHeight">@dimen/list_item_min_height</item>
    </style>

    <style name="SpinnerItem.Dropdown">
        <item name="android:background">@drawable/bg_spinner_item</item>
        <item name="android:paddingTop">@dimen/list_padding_top</item>
        <item name="android:paddingLeft">@dimen/list_padding_left</item>
        <item name="android:paddingRight">@dimen/list_padding_right</item>
        <item name="android:paddingBottom">@dimen/list_padding_bottom</item>
        <item name="android:minHeight">@dimen/list_item_min_height</item>
    </style>

    <style name="ListIcon">
        <item name="android:layout_width">@dimen/list_icon_size</item>
        <item name="android:layout_height">@dimen/list_icon_size</item>
        <item name="android:padding">@dimen/list_icon_padding</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ListTitle">
        <item name="android:layout_marginLeft">@dimen/list_text_padding_left</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/list_text_padding_left</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="AdvanceStepperButton">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="Button.Primary" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/color_primary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

</resources>