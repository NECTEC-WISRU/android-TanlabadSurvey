<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dynamic_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textAppearance">@style/TanrabadTextAppearance.Body</item>
    </style>

    <style name="number_input_field">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/between_view</item>
        <item name="android:layout_marginStart">@dimen/between_view</item>
        <item name="android:background">@drawable/survey_field_shape_small</item>
        <item name="android:ems">2</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:padding">@dimen/between_view</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TanrabadTextAppearance.Body</item>
    </style>
</resources>