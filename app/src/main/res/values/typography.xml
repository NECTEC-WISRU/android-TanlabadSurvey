<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <dimen name="text_headline">40sp</dimen>
    <dimen name="text_title">30sp</dimen>
    <dimen name="text_subhead">26sp</dimen>
    <dimen name="text_body">24sp</dimen>
    <dimen name="text_caption">20sp</dimen>
    <dimen name="text_micro">10sp</dimen>

    <style name="TanrabadTextAppearance" parent="@android:style/TextAppearance">
        <item name="fontPath">fonts/ThaiSansNeue-Regular.otf</item>
    </style>

    <style name="TanrabadTextAppearance.Body">
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="TanrabadTextAppearance.Body.2">
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/ThaiSansNeue-Bold.otf</item>
    </style>

    <style name="TanrabadTextAppearance.Label">
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="TanrabadTextAppearance.Subhead">
        <item name="android:textSize">@dimen/text_subhead</item>
    </style>

    <style name="TanrabadTextAppearance.Subhead.2">
        <item name="android:textSize">@dimen/text_subhead</item>
        <item name="fontPath">fonts/ThaiSansNeue-Bold.otf</item>
    </style>

    <style name="TanrabadTextAppearance.Title">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="fontPath">fonts/ThaiSansNeue-Bold.otf</item>
    </style>

    <style name="TanrabadTextAppearance.Caption">
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textColor">@color/black_transparent_50</item>
    </style>
</resources>