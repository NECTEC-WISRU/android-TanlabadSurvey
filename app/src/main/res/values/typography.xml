<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TanrabadTextAppearance" parent="@android:style/TextAppearance" />

    <style name="TanrabadTextAppearance.Caption">
        <item name="android:textSize">@dimen/text.caption</item>
    </style>

    <style name="TanrabadTextAppearance.Body">
        <item name="android:textSize">@dimen/text.body</item>
    </style>

    <style name="TanrabadTextAppearance.Body.2">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TanrabadTextAppearance.Label">
        <item name="android:textSize">@dimen/text.caption</item>
    </style>

    <style name="TanrabadTextAppearance.Label.Form">
        <item name="android:textSize">@dimen/text.caption</item>
    </style>

    <style name="TanrabadTextAppearance.Subhead">
        <item name="android:textSize">@dimen/text.subhead</item>
    </style>

    <style name="TanrabadTextAppearance.Title">
        <item name="android:textSize">@dimen/text.title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TanrabadTextAppearance.HeadLine">
        <item name="android:textSize">@dimen/text.headline</item>
    </style>

    <style name="TanrabadTextAppearance.Display">
        <item name="android:textSize">@dimen/text.display1</item>
    </style>

    <style name="TanrabadTextAppearance.Display.2">
        <item name="android:textSize">@dimen/text.display2</item>
    </style>

    <style name="TanrabadTextAppearance.Display.3">
        <item name="android:textSize">@dimen/text.display3</item>
    </style>

    <style name="TanrabadTextAppearance.Display.4">
        <item name="android:textSize">@dimen/text.display4</item>
    </style>

    <style name="TanrabadTextAppearance.Button">
        <item name="android:textSize">@dimen/text.body</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>